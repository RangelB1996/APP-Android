<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_tarea"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="15dp"
            android:layout_centerInParent="true"
            android:src="@drawable/artboard1" />

        <ImageView
            android:id="@+id/image_view_calculadora"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="15dp"
            android:layout_centerInParent="true"
            android:src="@drawable/artboard2" />

        <ImageView
            android:id="@+id/image_view_libros"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/artboard3" />

        <ImageView
            android:id="@+id/image_view_buscars"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="15dp"
            android:layout_centerInParent="true"
            android:src="@drawable/artboard4" />

    </LinearLayout>

</RelativeLayout>