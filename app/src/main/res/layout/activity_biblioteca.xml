                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mega"
                android:layout_width="296dp"
                android:layout_height="70dp"
                android:background="@drawable/mega" />


            <TextView
                android:id="@+id/titulo1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Automatas Finitos"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/au_fin"
                android:layout_width="300dp"
                android:layout_height="318dp"
                android:background="@drawable/elvis" />

            <TextView
                android:id="@+id/text8"
                android:layout_width="wrap_content"
                android:layout_height="141dp"
                android:fontFamily="casual"
                android:text="PDF con contenido acerca de los automatas finitos, informacion de suma importancia para
enamorarse de esta genial materia Lenguajes y Automatas"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mega2"
                android:layout_width="296dp"
                android:layout_height="64dp"
                android:background="@drawable/mega" />

            <TextView
                android:id="@+id/titulo2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Principios de compiladores"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/compi"
                android:layout_width="300dp"
                android:layout_height="282dp"
                android:background="@drawable/compiladores" />

            <TextView
                android:id="@+id/text9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="La biblia de Lenguajes y Automatas , el hermoso libro del dragoncito :3"
