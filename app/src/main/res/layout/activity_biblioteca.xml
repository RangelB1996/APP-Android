                android:layout_width="300dp"
                android:layout_height="282dp"
                android:background="@drawable/ensamblador" />

            <TextView
                android:id="@+id/text10"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:fontFamily="casual"
