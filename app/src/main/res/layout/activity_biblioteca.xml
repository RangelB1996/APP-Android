                android:text="Aqui encontraras libros los cuales hemos estado usando en el transcurso de la carrera
asi como documentos de algunos estudihambres 100% confiables"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Libritos :)"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="JAVA SE 8"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/javase"
                android:layout_width="300dp"
                android:layout_height="312dp"
                android:background="@drawable/javase8" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="148dp"
                android:fontFamily="casual"
                android:text="Libro en el cual encontraras todo aquello que desconoces de java asi como reafirmaras cosas
