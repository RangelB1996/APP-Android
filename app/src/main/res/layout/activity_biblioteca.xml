                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mega4"
                android:layout_width="296dp"
                android:layout_height="64dp"
                android:background="@drawable/mega" />
            <TextView
                android:id="@+id/titulo4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Expresiones Regulares"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/exp"
                android:layout_width="300dp"
                android:layout_height="282dp"
                android:background="@drawable/elvis1" />

            <TextView
                android:id="@+id/text11"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:fontFamily="casual"
                android:text="PDF con contenido acerca de expresiones regulares las cuales te facilitaran
muchisimo trabajo pues son muy eficientes"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mega5"
                android:layout_width="296dp"
                android:layout_height="64dp"
                android:background="@drawable/mega" />
